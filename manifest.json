{
  "manifest_version": 3,
  "name": "Coze文章总结助手",
  "version": "1.0",
  "description": "使用Coze API快速总结网页内容",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://api.coze.cn/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["floatBall.css"],
      "js": ["floatBall.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icon.png", "avatar.png", "qrcode.png"],
    "matches": ["<all_urls>"]
  }]
} 